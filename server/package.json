{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "pg-promise": "^8.4.6"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.0",
    "@types/node": "^10.10.1",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "node build/index.js",
    "watch-node": "nodemon build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c ../tslint.json -p tsconfig.json",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect build/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  }
}
